{
 
  "typeCheckingMode": "strict",

  // Global include: all service src folders
  "include": [
    "services/auth/src",
    "services/shared/src",
    "services/store/src",
    "services/compute/src",
    "sdks/pysdk/src"
  ],

  "exclude": [
    "**/__pycache__",
    "**/node_modules",
    "**/.venv",
    "**/build",
    "**/dist"
  ],

  // FastAPI / Depends fix
  "reportCallInDefaultInitializer": "none",



  "executionEnvironments": [
    {
      "root": "services/auth",
      "extraPaths": ["services/auth/src"]
    },
    {
      "root": "services/shared",
      "extraPaths": ["services/shared/src"]
    },
    {
      "root": "services/store",
      "extraPaths": ["services/store/src", "services/store/typings"]
    },
    {
      "root": "services/compute",
      "extraPaths": ["services/compute/src"]
    },
    {
      "root": "sdks/pysdk",
      "extraPaths": ["sdks/pysdk/src"]
    },
    {
      // This matches your final `uv run basedpyright`
      "root": "."
    }
  ]
}
