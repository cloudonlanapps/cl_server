{
  "data_dir": "~/.cl_server_test/data",
  "log_dir": "~/.cl_server_test/logs",
  "auth": {
    "dir": "services/auth",
    "port": 8010
  },
  "store": {
    "dir": "services/store",
    "port": 8011
  },
  "compute": {
    "dir": "services/compute",
    "port": 8012
  },
  "workers": [
    {
      "id": "dev-worker-8012-1",
      "dir": "services/compute",
      "tasks": [
        "clip_embedding",
        "dino_embedding",
        "exif",
        "face_detection",
        "face_embedding",
        "hash",
        "hls_streaming",
        "image_conversion",
        "media_thumbnail"
      ],
      "poll_interval": 0.1
    }
  ],
  "broadcaster": {
    "interval": 5.0,
    "service_name": "repo.rpi@cloudonlanapps",
    "service_type": "_http._tcp",
    "txt_record": "desc=CL Server Single Worker on RPI"
  },
  "mqtt_url": "mqtt://localhost:1883"
}